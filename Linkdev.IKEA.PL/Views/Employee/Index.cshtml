@model IEnumerable<EmployeeDto>
@{
    ViewData["Title"] = "Employees";
}

<div class="d-flex justify-content-between align-items-center mt-5">
    <h1>Employees</h1>
    <a class="btn btn-outline-primary" asp-controller="Employee" asp-action="Create">Add New Employee</a>
</div>

<form class="my-5 mx-auto col-8" asp-action="Index" method="get">
    <div class="row justify-content-center align-items-center gap-1">
       <div class="col-9">
            <input class="form-control" name="searchValue" id="SearchInp" placeholder="Search for employee" />
       </div>
        <input type="submit" class="col-2 btn btn-outline-success" value="Search"/>
    </div>
</form>

@if (Model.Any())
{
    <table class="table table-striped table-dark table-hover text-center">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(E => E.Name)</th>
                <th>@Html.DisplayNameFor(E => E.Age)</th>
                <th>@Html.DisplayNameFor(E => E.Email)</th>
                <th>@Html.DisplayNameFor(E => E.Salary)</th>
                <th>@Html.DisplayNameFor(E => E.IsActive)</th>
                <th>@Html.DisplayNameFor(E => E.EmployeeType)</th>
                <th>@Html.DisplayNameFor(E => E.Gender)</th>
                <th>@Html.DisplayNameFor(E => E.Department)</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody id="employeeList">
            <partial name="Partials/_EmployeeListPartial" model="Model">
        </tbody>
    </table>
}
else
{
    <div class="alert alert-info">
        <h2>
            <i class="fa-solid fs-3 fa-circle-info me-2"></i> There are no Employees
        </h2>
    </div>
}

@section Scripts {
    <script src="~/sweetalert/modal.js"></script>
}