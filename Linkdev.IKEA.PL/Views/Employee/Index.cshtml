@model IEnumerable<EmployeeDto>
@{
    ViewData["Title"] = "Employees";
}

<div class="d-flex justify-content-between align-items-center my-5">
    <h1>Employees</h1>
    <a class="btn btn-outline-primary" asp-controller="Employee" asp-action="Create">Add New Employee</a>
</div>

@if (Model.Count() > 0)
{
    <table class="table table-striped table-dark table-hover text-center">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(E => E.Name)</th>
                <th>@Html.DisplayNameFor(E => E.Age)</th>
                <th>@Html.DisplayNameFor(E => E.Email)</th>
                <th>@Html.DisplayNameFor(E => E.Salary)</th>
                <th>@Html.DisplayNameFor(E => E.IsActive)</th>
                <th>@Html.DisplayNameFor(E => E.EmployeeType)</th>
                <th>@Html.DisplayNameFor(E => E.Gender)</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model)
            {
                <tr>
                    <td>@Html.DisplayFor( X => employee.Name)</td>
                    <td>@Html.DisplayFor( X => employee.Age)</td>
                    <td>@Html.DisplayFor( X => employee.Email)</td>
                    <td>@Html.DisplayFor( X => employee.Salary)</td>
                    <td>
                        <input disabled type="checkbox" checked="@employee.IsActive" readonly />
                    </td>
                    <td>@employee.EmployeeType</td>
                    <td>@employee.Gender</td>
                    <partial name="_ButtonsPartial" model="employee.Id"></partial>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-info">
        <h2>
            <i class="fa-solid fs-3 fa-circle-info me-2"></i> There are no Employees
        </h2>
    </div>
}

@section Scripts {
    <script src="~/sweetalert/modal.js"></script>
}