@model IEnumerable<EmployeeDto>
@{
    ViewData["Title"] = "Employees";
}

<div class="d-flex justify-content-between align-items-center my-5">
    <h1>Employees</h1>
    <a class="btn btn-outline-primary" asp-controller="Employee" asp-action="Create">Add New Employee</a>
</div>

@if (Model.Any())
{
    <table class="table table-striped table-dark table-hover text-center">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(E => E.Name)</th>
                <th>@Html.DisplayNameFor(E => E.Age)</th>
                <th>@Html.DisplayNameFor(E => E.Email)</th>
                <th>@Html.DisplayNameFor(E => E.Salary)</th>
                <th>@Html.DisplayNameFor(E => E.IsActive)</th>
                <th>@Html.DisplayNameFor(E => E.EmployeeType)</th>
                <th>@Html.DisplayNameFor(E => E.Gender)</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model)
            {
                <tr>
                    <td>@employee.Name</td>
                    <td>@employee.Age</td>
                    <td>@employee.Email</td>
                    <td>@employee.Salary</td>
                    <td>
                        <input type="checkbox" checked="@employee.IsActive" readonly />
                    </td>
                    <td>@employee.EmployeeType</td>
                    <td>@employee.Gender</td>
                    <td>
                        <a class="btn btn-outline-warning" asp-controller="Employee" asp-action="Details" asp-route-id="@employee.Id">
                            <i class="fa-solid fa-eye me-2"></i> Details
                        </a>
                    </td>
                    <td>
                        <a class="btn btn-outline-success" asp-controller="Employee" asp-action="Edit" asp-route-id="@employee.Id">
                            <i class="fa-solid fa-pen-to-square me-2"></i> Edit
                        </a>
                    </td>
                    <td>
                        <button id="Delete" asp-controller="Employee" data="@employee.Id" class="btn btn-outline-danger">
                            <i class="fa-solid fa-trash me-2"></i> Delete
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-info">
        <h2>
            <i class="fa-solid fs-3 fa-circle-info me-2"></i> There are no Employees
        </h2>
    </div>
}

@section Scripts {
    <script src="~/sweetalert/modal.js"></script>
}