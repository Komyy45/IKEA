@model int 
@{
    ViewData["Title"] = "_ButtonsPartial";
    var id = Model;
}

<td>
    <a class="btn btn-outline-warning" asp-action="Details" asp-route-id="@id">
        <i class="fa-solid fa-eye me-2"></i> Details
    </a>
</td>
<td>
    <a class="btn btn-outline-success" asp-action="Edit" asp-route-id="@id">
        <i class="fa-solid fa-pen-to-square me-2"></i> Edit
    </a>
</td>
<td>
    <button name="Delete" id="@id" class="btn btn-outline-danger">
        <i class="fa-solid fa-trash me-2"></i> Delete
    </button>
</td>