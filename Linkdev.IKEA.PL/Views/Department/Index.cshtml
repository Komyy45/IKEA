@model IEnumerable<DepartmentDto>
@{
    ViewData["Title"] = "Deparmtents";
}

<div class="d-flex justify-content-between align-items-center my-5">
    <h1>Deparmtents</h1>
    <a class="btn btn-outline-primary" asp-controller="Department" asp-action="Create">Create new Department</a>
</div>

@if(Model.Any())
{
    <table class="table table-striped table-dark table-hover text-center">
         <thead>
            <tr>
                <th>@Html.DisplayNameFor(D => D.Code)</th>
                <th>@Html.DisplayNameFor(D => D.Name)</th>
                <th>@Html.DisplayNameFor(D => D.CreationDate)</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
         </thead>
         <tbody>
             @foreach(var department in Model)
            {
                <tr>
                    <td>@department.Code</td>
                    <td>@department.Name</td>
                    <td>@department.CreationDate</td>
                    <td>
                        <a class="btn btn-outline-warning" asp-controller="Department" asp-action="Details" asp-route-id="@department.Id">
                            <i class="fa-solid fa-eye me-2"></i> Details
                        </a>
                    </td>
                    <td>
                        <a class="btn btn-outline-success" asp-controller="Department" asp-action="Edit" asp-route-id="@department.Id">
                            <i class="fa-solid fa-pen-to-square me-2"></i> Edit
                        </a>
                    </td>
                    <td>
                        <a class="btn btn-outline-danger" asp-controller="Department" asp-action="Delete" asp-route-id="@department.Id">
                            <i class="fa-solid fa-trash me-2"></i> Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-info">
        <h2>
            <i class="fa-solid fs-3 fa-circle-info me-2"></i> There are no Departments
        </h2>
    </div>
}