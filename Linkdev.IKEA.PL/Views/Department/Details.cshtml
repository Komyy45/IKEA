@model DepartmentDetailsDto
@{
    ViewData["Title"] = "Details";
}

<h1 class="my-5 w-75 m-auto">Department Details</h1>

<div class="d-flex align-items-start border rounded w-75 m-auto p-5">
    <div class="nav flex-column nav-pills me-5" id="v-pills-tab" role="tablist" aria-orientation="vertical">
        <button class="nav-link active" id="v-pills-General-tab" data-bs-toggle="pill" data-bs-target="#v-pills-General" type="button" role="tab" aria-controls="v-pills-General" aria-selected="true">General</button>
        <button class="nav-link" id="v-pills-Adminstration-tab" data-bs-toggle="pill" data-bs-target="#v-pills-Adminstration" type="button" role="tab" aria-controls="v-pills-Adminstration" aria-selected="false">Adminstration</button>
    </div>
    <div class="tab-content w-75 m-auto" id="v-pills-tabContent ">
        <div class="tab-pane fade show active" id="v-pills-General" role="tabpanel" aria-labelledby="v-pills-General-tab" tabindex="0">
            <div class="form-group col-5 d-inline-block">
                <label class="form-label" asp-for="Code"></label>
                <input readonly class="form-control" asp-for="Code" />
            </div>
            <div class="form-group col-5 d-inline-block">
                <label class="form-label" asp-for="Name"></label>
                <input readonly class="form-control" asp-for="Name" />
            </div>
            <div class="form-group col-12">
                <label class="form-label" asp-for="Description"></label>
                <textarea readonly class="form-control" asp-for="Description" ></textarea>
            </div>
            <div class="form-group col-12">
                <label class="form-label" asp-for="CreationDate"></label>
                <input readonly class="form-control" asp-for="CreationDate" />
            </div>
        </div>
        <div class="tab-pane fade" id="v-pills-Adminstration" role="tabpanel" aria-labelledby="v-pills-Adminstration-tab" tabindex="0">

            <div class="form-group col-5 d-inline-block">
                <label class="form-label" asp-for="Id"></label>
                <input readonly class="form-control" asp-for="Id" />
            </div>
            <div class="form-group col-5 d-inline-block">
                <label class="form-label" asp-for="CreatedBy"></label>
                <input readonly class="form-control" asp-for="CreatedBy" />
            </div>
            <div class="form-group col-5 d-inline-block">
                <label class="form-label" asp-for="CreatedOn"></label>
                <input readonly class="form-control" asp-for="CreatedOn"/>
            </div>
            <div class="form-group col-5 d-inline-block">
                <label class="form-label" asp-for="LastModifiedBy"></label>
                <input readonly class="form-control" asp-for="LastModifiedBy" />
            </div>
            <div class="form-group col-5 d-inline-block">
                <label class="form-label" asp-for="LastModifiedOn"></label>
                <input readonly class="form-control" asp-for="LastModifiedOn" />
            </div>
        </div>
    </div>
</div>

<div class="btns d-flex justify-content-end align-items-center gap-4 w-75 mt-5 m-auto">
    <a class="btn btn-outline-success" asp-asp-controller="Deaprtment" asp-action="Edit">
        <i class="fa-solid fa-pen-to-square me-2"></i> Edit
    </a>
    <a class="btn btn-outline-danger" asp-controller="Department" asp-action="Index">
        <i class="fa-solid fa-right-to-bracket me-2"></i>    Go Back
    </a>
</div>